	"postCreateCommand": "go env -w CGO_ENABLED=1",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.makefile-tools",
				"golang.Go",
				"ms-azuretools.vscode-docker"
			]
		}
	}
	// Configure tool-specific properties.
	// "customizations": {},
